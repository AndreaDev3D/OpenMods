                    <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1">Views</span>
                    <span class="text-sm font-bold text-white">@_mod.Views.ToString("N0")</span>
                </div>
            </div>
        </div>

                    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
                        <div class="lg:col-span-8 space-y-8">
                            @if (_mod.GalleryImageUrls != null && _mod.GalleryImageUrls.Any())
