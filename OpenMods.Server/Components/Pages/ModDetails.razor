                    <span class="material-symbols-outlined text-[20px]">@(_isCopied ? "check_circle" : "share")</span>
                    @(_isCopied ? "Copied!" : "Share")
                </button>
                <button @onclick="HandleStar"
                        class="flex items-center gap-2 px-6 py-3 rounded-xl border border-border-dark bg-card-dark text-sm font-bold text-white hover:bg-primary hover:border-primary transition-all duration-300 shadow-lg shadow-primary/20">
                    <span class="material-symbols-outlined text-[20px] fill-current">star</span> 
                    Star <span class="text-white/60 font-medium ml-1">@FormatCount(_mod.Stars)</span>
                </button>
