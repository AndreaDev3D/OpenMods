@page "/mod/{Id:int}"
@using OpenMods.Shared.Models
@using OpenMods.Shared.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@inject IDbContextFactory<AppDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ModService ModService

<PageTitle>@(_mod?.Name ?? "Loading...") | OpenMods</PageTitle>

<HeadContent>
    @if (_mod != null)
    {
        <meta property="og:title" content="@(_mod.Name) | OpenMods" />
        <meta property="og:description" content="@(_mod.Description ?? "OpenMods | Decentralized Modding Layer")" />
        <meta property="og:image" content="@(_mod.ImageUrl ?? "https://www.openmods.net/img/logo-large.png")" />
        <meta property="og:url" content="@(Nav.Uri)" />
        
        <meta property="twitter:title" content="@(_mod.Name) | OpenMods" />
        <meta property="twitter:description" content="@(_mod.Description ?? "OpenMods | Decentralized Modding Layer")" />
        <meta property="twitter:image" content="@(_mod.ImageUrl ?? "https://www.openmods.net/img/logo-large.png")" />
    }
</HeadContent>

@if (_mod == null)
{
    <div class="flex items-center justify-center min-h-[60vh]">
        <div class="animate-pulse text-slate-400">Loading mod details...</div>
    </div>
}
else
{
    <main class="px-6 lg:px-10 py-6 max-w-[1440px] mx-auto w-full">
        <nav class="flex items-center gap-2 mb-8 text-[#92a4c9] text-sm font-display">
            <a class="hover:text-white transition-colors" href="/">OpenMods</a>
            <span class="material-symbols-outlined text-sm">chevron_right</span>
            <a class="hover:text-white transition-colors" href="explore">Explore</a>
            <span class="material-symbols-outlined text-sm">chevron_right</span>
            <span class="text-white">@_mod.Name</span>
        </nav>

        @if (_mod.IsArchived)
        {
            <div class="mb-6 p-4 bg-amber-500/10 border border-amber-500/30 rounded-xl flex items-center gap-3">
                <span class="material-symbols-outlined text-amber-500">archive</span>
                <div class="flex-1">
                    <p class="text-amber-500 font-bold text-sm">This mod is archived</p>
                    <p class="text-amber-500/70 text-xs">It is hidden from the public Explorer and will no longer receive
                        updates.</p>
                    </div>
                    @if (_isOwner)
                    {
                        <button @onclick="HandleArchive"
                                class="px-3 py-1 bg-amber-500 text-black text-xs font-bold rounded hover:brightness-110">Restore</button>
                    }
                </div>
            }

        @if (_isOwner)
        {
            <div class="mb-10 p-2 pl-4 bg-card-dark/40 border border-border-dark rounded-xl flex items-center justify-between backdrop-blur-sm animate-in fade-in slide-in-from-top-4 duration-500">
                <div class="flex items-center gap-3 text-[#92a4c9]">
                    <span class="material-symbols-outlined text-[20px]">admin_panel_settings</span>
                    <span class="text-xs font-bold uppercase tracking-widest">Developer Management</span>
                </div>
                <div class="flex items-center gap-2">
                    <div class="flex gap-2 mr-2 pr-2 border-r border-border-dark/50">
                        <button @onclick="HandleArchive"
                                class="flex items-center gap-2 px-4 py-1.5 rounded-lg border border-amber-500/30 bg-amber-500/5 text-amber-500 text-xs font-bold hover:bg-amber-500/10 transition-all">
                            <span class="material-symbols-outlined text-[16px]">@(_mod.IsArchived ? "unarchive" : "archive")</span>
                            <span>@(_mod.IsArchived ? "Restore" : "Archive")</span>
                        </button>
                        <button @onclick="HandleDelete"
                                class="flex items-center gap-2 px-4 py-1.5 rounded-lg border border-red-500/30 bg-red-500/5 text-red-500 text-xs font-bold hover:bg-red-500/10 transition-all">
                            <span class="material-symbols-outlined text-[16px]">delete</span>
                            <span>Delete</span>
                        </button>
                    </div>
                    <div class="flex gap-2">
                        <button @onclick="() => _showGalleryModal = true"
                                class="flex items-center gap-2 px-4 py-1.5 rounded-lg border border-border-dark bg-card-dark/50 text-white text-xs font-bold hover:bg-border-dark transition-all">
                            <span class="material-symbols-outlined text-[16px]">collections</span>
                            <span>Manage Gallery</span>
                        </button>
                        <button @onclick="HandleGitHubRefresh" disabled="@_isRefreshing"
                                class="flex items-center gap-2 px-4 py-1.5 rounded-lg border border-border-dark bg-card-dark/50 text-white text-xs font-bold hover:bg-border-dark transition-all disabled:opacity-50">
                            <span class="material-symbols-outlined text-[16px] @(_isRefreshing ? "animate-spin" : "")">@(_isRefreshing ? "sync" : "refresh")</span>
                            <span>@(_isRefreshing ? "Refresh" : "Refresh")</span>
                        </button>
                    </div>
                </div>
            </div>
        }

        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6 mb-12 pb-8 border-b border-border-dark/50 font-display">
            <div class="flex gap-8 items-center">
                <div class="size-28 rounded-2xl bg-card-dark border border-border-dark flex items-center justify-center overflow-hidden shadow-2xl ring-1 ring-white/5">
                    @if (!string.IsNullOrEmpty(_mod.ImageUrl))
                    {
                        <img src="@_mod.ImageUrl" class="w-full h-full object-cover" alt="@_mod.Name" />
                    }
                    else
                    {
                        <div class="w-full h-full bg-gradient-to-br from-primary/20 to-primary/40 flex items-center justify-center">
                            <span class="material-symbols-outlined text-6xl text-primary">auto_awesome</span>
                        </div>
                    }
                </div>
                <div>
                    <div class="flex items-center gap-4">
                        <h1 class="text-4xl font-bold tracking-tight text-white">@_mod.Name</h1>
                        <span class="px-2.5 py-0.5 bg-primary/20 text-primary border border-primary/30 rounded-md text-[10px] font-black uppercase tracking-[0.2em]">@LatestVersion</span>
                    </div>
                    <div class="flex items-center gap-6 mt-4 text-[#92a4c9]">
                        <a href="/profile/@_mod.Developer?.GitHubUsername" class="flex items-center gap-2.5 hover:opacity-100 transition-opacity group">
                            <div class="size-7 rounded-full bg-cover ring-2 ring-primary/20 group-hover:ring-primary/50 transition-all"
                                 style="background-image: url('@_mod.Developer?.AvatarUrl')"></div>
                            <span class="text-sm">by <span class="text-white font-bold group-hover:text-primary transition-colors">@_mod.Developer?.GitHubUsername</span></span>
                        </a>
                        <span class="w-px h-4 bg-border-dark"></span>
                        <a class="flex items-center gap-2 hover:text-white transition-colors group" href="@_mod.GitHubRepoUrl" target="_blank">
                            <span class="material-symbols-outlined text-[18px] text-slate-500 group-hover:text-primary transition-colors">link</span>
                            <span class="text-sm font-medium">@_mod.GitHubRepoUrl?.Replace("https://", "")</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-3">
                <button @onclick="HandleShare"
