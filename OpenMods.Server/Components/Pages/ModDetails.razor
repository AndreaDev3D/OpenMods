@page "/mod/{Id:int}"
@using OpenMods.Server.Models
@using OpenMods.Server.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@inject IDbContextFactory<AppDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime JS

<PageTitle>@(_mod?.Name ?? "Loading...") | OpenMods</PageTitle>

<HeadContent>
    @if (_mod != null)
    {
        <meta property="og:title" content="@(_mod.Name) | OpenMods" />
        <meta property="og:description" content="@(_mod.Description ?? "OpenMods | Decentralized Modding Layer")" />
        <meta property="og:image" content="@(_mod.ImageUrl ?? "https://www.openmods.net/img/logo-large.png")" />
        <meta property="og:url" content="@(Nav.Uri)" />
        
        <meta property="twitter:title" content="@(_mod.Name) | OpenMods" />
        <meta property="twitter:description" content="@(_mod.Description ?? "OpenMods | Decentralized Modding Layer")" />
        <meta property="twitter:image" content="@(_mod.ImageUrl ?? "https://www.openmods.net/img/logo-large.png")" />
    }
</HeadContent>

@if (_mod == null)
{
    <div class="flex items-center justify-center min-h-[60vh]">
        <div class="animate-pulse text-slate-400">Loading mod details...</div>
    </div>
}
else
{
    <main class="px-6 lg:px-10 py-6 max-w-[1440px] mx-auto w-full">
        <nav class="flex items-center gap-2 mb-8 text-[#92a4c9] text-sm font-display">
            <a class="hover:text-white transition-colors" href="/">OpenMods</a>
            <span class="material-symbols-outlined text-sm">chevron_right</span>
            <a class="hover:text-white transition-colors" href="explore">Explore</a>
            <span class="material-symbols-outlined text-sm">chevron_right</span>
            <span class="text-white">@_mod.Name</span>
        </nav>

        @if (_mod.IsArchived)
        {
            <div class="mb-6 p-4 bg-amber-500/10 border border-amber-500/30 rounded-xl flex items-center gap-3">
                <span class="material-symbols-outlined text-amber-500">archive</span>
                <div class="flex-1">
                    <p class="text-amber-500 font-bold text-sm">This mod is archived</p>
                    <p class="text-amber-500/70 text-xs">It is hidden from the public Explorer and will no longer receive
                        updates.</p>
                    </div>
                    @if (_isOwner)
                    {
                        <button @onclick="HandleArchive"
                                class="px-3 py-1 bg-amber-500 text-black text-xs font-bold rounded hover:brightness-110">Restore</button>
                    }
                </div>
            }

            <div
                class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6 mb-10 pb-8 border-b border-border-dark font-display">
                <div class="flex gap-6 items-center">
                    <div
                        class="size-24 rounded-xl bg-card-dark border border-border-dark flex items-center justify-center overflow-hidden">
                        @if (!string.IsNullOrEmpty(_mod.ImageUrl))
                        {
                            <img src="@_mod.ImageUrl" class="w-full h-full object-cover" alt="@_mod.Name" />
                        }
                        else
                        {
                            <div
                                class="w-full h-full bg-gradient-to-br from-primary/20 to-primary/40 flex items-center justify-center">
                                <span class="material-symbols-outlined text-5xl text-primary">auto_awesome</span>
                            </div>
                        }
                    </div>
                    <div>
                        <div class="flex items-center gap-3">
                            <h1 class="text-3xl font-bold tracking-tight">@_mod.Name</h1>
                            <span
                            class="px-2 py-0.5 bg-primary/20 text-primary rounded text-xs font-bold uppercase tracking-wider">@LatestVersion</span>
                        </div>
                        <div class="flex items-center gap-4 mt-2 text-[#92a4c9]">
                            <div class="flex items-center gap-2">
                                <div class="size-6 rounded-full bg-cover"
                                     style="background-image: url('@_mod.Developer?.AvatarUrl')"></div>
                                <span class="text-sm">by <span
                                    class="text-white font-medium">@_mod.Developer?.GitHubUsername</span></span>
                                </div>
                                <span class="text-border-dark">|</span>
                                <a class="flex items-center gap-1.5 hover:text-white transition-colors" href="@_mod.GitHubRepoUrl"
                                       target="_blank">
                                    <span class="material-symbols-outlined text-sm">link</span>
                                    <span class="text-sm">@_mod.GitHubRepoUrl?.Replace("https://", "")</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        @if (_isOwner)
                        {
                            <div class="flex gap-2 mr-4 pr-4 border-r border-border-dark">
                                <button @onclick="HandleArchive"
                                        class="flex items-center gap-2 px-4 py-2 rounded-lg border border-amber-500/50 bg-amber-500/10 text-amber-500 text-sm font-bold hover:bg-amber-500/20 transition-all">
                                    <span class="material-symbols-outlined text-[18px]">@( _mod.IsArchived ? "unarchive" :
                                                                                                                                           "archive")</span>
                                        <span>@( _mod.IsArchived ? "Restore" : "Archive")</span>
                                    </button>
                                    <button @onclick="HandleDelete"
                                            class="flex items-center gap-2 px-4 py-2 rounded-lg border border-red-500/50 bg-red-500/10 text-red-500 text-sm font-bold hover:bg-red-500/20 transition-all">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                        <span>Delete</span>
                                    </button>
                                </div>
                            }
                            <button @onclick="HandleShare"
                                    class="flex items-center gap-2 px-5 py-2.5 rounded-lg border border-border-dark bg-card-dark text-sm font-bold @(_isCopied ? "text-emerald-500 border-emerald-500/50" : "hover:bg-border-dark") transition-all">
                                <span class="material-symbols-outlined text-[18px]">@(_isCopied ? "check_circle" : "share")</span>
                                @(_isCopied ? "Copied!" : "Share")
                            </button>
                            <button
                                class="flex items-center gap-2 px-5 py-2.5 rounded-lg border border-border-dark bg-card-dark text-sm font-bold hover:bg-border-dark transition-colors">
                                <span class="material-symbols-outlined text-[18px]">star</span> Star @FormatCount(_mod.Stars)
                            </button>
                            <button
                                class="flex items-center gap-2 px-5 py-2.5 rounded-lg border border-border-dark bg-card-dark text-sm font-bold hover:bg-border-dark transition-colors">
                                <span class="material-symbols-outlined text-[18px]">fork_right</span> Fork @FormatCount(_mod.Forks)
                            </button>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
                        <div class="lg:col-span-8">
                            <div
                                class="bg-card-dark/30 rounded-xl border border-border-dark p-8 markdown-body font-body text-slate-300">
                                <div class="flex items-center gap-3 mb-8 text-[#92a4c9] pb-4 border-b border-border-dark font-display">
                                    <span class="material-symbols-outlined text-[20px]">description</span>
                                    <span class="text-sm font-medium">README.md</span>
                                </div>
                
                                <div class="prose prose-invert max-w-none">
                                    @((MarkupString)_mod.LongDescription!)
                                </div>
                            </div>
                        </div>

                        <div class="lg:col-span-4 space-y-6 font-display">
                            <div class="bg-card-dark border border-border-dark rounded-xl p-6">
                                <button
                                    class="w-full flex items-center justify-center gap-3 bg-primary hover:bg-primary/90 py-4 rounded-lg font-bold text-white transition-all mb-4 shadow-lg shadow-primary/20">
                                    <span class="material-symbols-outlined">download</span>
                                    Download Latest Release
                                </button>
                                <a href="@_mod.GitHubRepoUrl" target="_blank"
                                       class="w-full flex items-center justify-center gap-3 bg-transparent border border-border-dark hover:bg-border-dark py-3 rounded-lg font-bold text-[#92a4c9] hover:text-white transition-all text-center">
                                    <GithubIcon Class="size-5 fill-current" />
                                    View on GitHub
                                </a>
                            </div>

                            <div class="bg-card-dark border border-border-dark rounded-xl p-6">
                        <h3 class="text-sm font-bold uppercase tracking-wider text-[#92a4c9] mb-4">Project Metadata</h3>
                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div class="bg-background-dark p-3 rounded-lg border border-border-dark/50">
                                <div class="flex items-center gap-2 text-[#92a4c9] mb-1">
                                    <span class="material-symbols-outlined text-sm">star</span>
                                    <span class="text-xs font-medium">Stars</span>
                                </div>
                                <p class="text-lg font-bold">@FormatCount(_mod.Stars)</p>
                            </div>
                            <div class="bg-background-dark p-3 rounded-lg border border-border-dark/50">
                                <div class="flex items-center gap-2 text-[#92a4c9] mb-1">
                                    <span class="material-symbols-outlined text-sm">fork_right</span>
                                    <span class="text-xs font-medium">Forks</span>
                                </div>
                                <p class="text-lg font-bold">@FormatCount(_mod.Forks)</p>
                            </div>
                        </div>

                        <div class="space-y-3">
                            <div class="flex items-center justify-between">
                                <h4 class="text-[10px] font-bold uppercase tracking-widest text-[#4a5568]">Supported Games</h4>
                                @if (_isOwner)
                                {
                                    <button @onclick="() => _isEditingGames = !_isEditingGames" 
                                            class="text-[10px] font-bold text-primary hover:underline">
                                        @(_isEditingGames ? "Cancel" : "Edit")
                                    </button>
                                }
                            </div>

                            @if (_isEditingGames && _allGames != null)
                            {
                                <div class="grid grid-cols-2 gap-2 bg-[#1a1e2b] p-3 rounded-lg border border-[#232a3b]">
                                    @foreach (var game in _allGames)
                                    {
                                        var latestRelease = _mod.Releases.OrderByDescending(r => r.ReleasedAt).FirstOrDefault();
                                        bool isSupported = latestRelease?.SupportedGames.Any(g => g.Id == game.Id) ?? false;
                                        
                                        <button @onclick="() => ToggleGameSupport(game)" 
                                                class="flex items-center gap-2 p-1.5 rounded-md hover:bg-white/5 transition-colors text-left">
                                            <div class="size-4 rounded border @(isSupported ? "bg-primary border-primary flex items-center justify-center" : "border-[#232a3b]")">
                                                @if (isSupported)
                                                { <span class="material-symbols-outlined text-white text-[12px] font-bold">check</span> }
                                            </div>
                                            <span class="text-[11px] font-medium @(isSupported ? "text-white" : "text-[#4a5568]")">@game.Name</span>
                                        </button>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="flex flex-col gap-3">
                                    @{
                                        var latestRelease = _mod.Releases.OrderByDescending(r => r.ReleasedAt).FirstOrDefault();
                                        var games = latestRelease?.SupportedGames ?? new();
                                    }
                                    @if (games.Any())
                                    {
                                        @foreach (var game in games)
                                        {
                                            <a href="/explore?gameId=@game.Id" class="group relative flex items-center gap-4 bg-[#1a1e2b] border border-[#232a3b] hover:border-primary/50 p-2 rounded-xl transition-all overflow-hidden">
                                                <div class="absolute inset-0 bg-gradient-to-r from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                                <div class="relative size-12 rounded-lg overflow-hidden border border-white/10 shrink-0">
                                                    <img src="@game.ImageUrl" class="size-full object-cover transition-transform duration-500 group-hover:scale-110" alt="@game.Name" />
                                                </div>
                                                <div class="relative flex-1 min-w-0">
                                                    <p class="text-[13px] font-bold text-white truncate group-hover:text-primary transition-colors">@game.Name</p>
                                                    <div class="flex items-center gap-1.5 mt-0.5">
                                                        <span class="size-1.5 rounded-full bg-emerald-500"></span>
                                                        <span class="text-[10px] text-[#92a4c9] font-medium uppercase tracking-wider">Compatible</span>
                                                    </div>
                                                </div>
                                                <span class="material-symbols-outlined text-[#4a5568] group-hover:text-primary transition-colors text-lg pr-1">chevron_right</span>
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <div class="flex flex-col items-center justify-center py-8 rounded-xl border border-dashed border-[#232a3b] bg-white/[0.02]">
                                            <span class="material-symbols-outlined text-[#4a5568] text-3xl mb-2">sports_esports</span>
                                            <span class="text-xs text-[#4a5568] italic tracking-tight">No platforms specified</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <div class="bg-card-dark border border-border-dark rounded-xl p-6">
                                <div class="flex items-center justify-between mb-4">
                                    <h3 class="text-sm font-bold uppercase tracking-wider text-[#92a4c9]">Versions</h3>
                                    <a class="text-primary text-xs font-bold hover:underline" href="#">View All</a>
                                </div>
                                <div class="space-y-4">
                                    @foreach (var release in _mod.Releases.OrderByDescending(r => r.ReleasedAt))
                                    {
                                        <div class="flex items-center justify-between group cursor-pointer">
                                            <div class="flex items-center gap-3">
                                                <div
                                                    class="size-2 rounded-full @(release == _mod.Releases.OrderByDescending(r => r.ReleasedAt).First() ? "bg-green-500" : "bg-border-dark")">
                                                </div>
                                                <div>
                                                    <p class="text-sm font-bold group-hover:text-primary transition-colors">
                                                        @release.Version
                                                        @if (release == _mod.Releases.OrderByDescending(r => r.ReleasedAt).First())
                                                        {
                                                            <span
                                                            class="text-[10px] ml-2 font-normal px-1.5 py-0.5 bg-primary/20 text-primary rounded">LATEST</span>
                                                        }
                                                    </p>
                                                    <p class="text-xs text-[#92a4c9]">Released @TimeAgo(release.ReleasedAt)</p>
                                                </div>
                                            </div>
                                            <span
                                            class="material-symbols-outlined text-[#92a4c9] group-hover:text-white text-xl">download</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            }

@code {
    [Parameter] public int Id { get; set; }
    private Mod? _mod;
    private bool _isOwner = false;
    private bool _isEditingGames = false;
    private bool _isCopied = false;
    private List<Game>? _allGames;

    protected override async Task OnInitializedAsync()
    {
        await LoadMod();
    }

    private async Task LoadMod()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        _mod = await context.Mods
            .Include(m => m.Developer)
            .Include(m => m.Releases)
                .ThenInclude(r => r.SupportedGames)
            .FirstOrDefaultAsync(m => m.Id == Id);

        _allGames = await context.Games.ToListAsync();

        if (_mod != null)
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            // Case-insensitive check for owner
            var githubHandle = user.FindFirst("github_handle")?.Value;
            _isOwner = user.Identity?.IsAuthenticated == true &&
                      githubHandle?.ToLower() == _mod.Developer?.GitHubUsername?.ToLower();
        }
    }

    private async Task ToggleGameSupport(Game game)
    {
        if (_mod == null || !_isOwner) return;

        var latestRelease = _mod.Releases.OrderByDescending(r => r.ReleasedAt).FirstOrDefault();
        if (latestRelease == null) return;

        using var context = await DbFactory.CreateDbContextAsync();
        var dbRelease = await context.Releases
            .Include(r => r.SupportedGames)
            .FirstOrDefaultAsync(r => r.Id == latestRelease.Id);

        if (dbRelease != null)
        {
            var existingGame = dbRelease.SupportedGames.FirstOrDefault(g => g.Id == game.Id);
            if (existingGame != null)
            {
                dbRelease.SupportedGames.Remove(existingGame);
            }
            else
            {
                var dbGame = await context.Games.FindAsync(game.Id);
                if (dbGame != null)
                {
                    dbRelease.SupportedGames.Add(dbGame);
                }
            }

            await context.SaveChangesAsync();
            await LoadMod(); // Refresh UI
        }
    }

    private async Task HandleArchive()
    {
        if (_mod == null || !_isOwner) return;

        using var context = await DbFactory.CreateDbContextAsync();
        var mod = await context.Mods.FindAsync(Id);
        if (mod != null)
        {
            mod.IsArchived = !mod.IsArchived;
            await context.SaveChangesAsync();
            _mod.IsArchived = mod.IsArchived; // Update local state for UI
        }
    }

    private async Task HandleDelete()
    {
        if (_mod == null || !_isOwner) return;

        // Simple confirmation via JS (could be a better Modal later)
        bool confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you absolutely sure you want to delete '{_mod.Name}'? This action cannot be undone.");
        if (!confirmed) return;

        using var context = await DbFactory.CreateDbContextAsync();
        var mod = await context.Mods
            .Include(m => m.Releases)
            .FirstOrDefaultAsync(m => m.Id == Id);

        if (mod != null)
        {
            context.Mods.Remove(mod);
            await context.SaveChangesAsync();
            Nav.NavigateTo("/explore");
        }
    }

    private string LatestVersion => _mod?.Releases.MaxBy(r => r.ReleasedAt)?.Version ?? "v0.0.0";

    private async Task HandleShare()
    {
        var url = Nav.Uri;
        await JS.InvokeVoidAsync("copyToClipboard", url);
        _isCopied = true;
        StateHasChanged();
        await Task.Delay(2000);
        _isCopied = false;
        StateHasChanged();
    }

    private string FormatCount(int count) => count >= 1000 ? $"{(count / 1000.0):F1}k" : count.ToString();

    private string TimeAgo(DateTime dateTime)
    {
        var span = DateTime.UtcNow - dateTime;
        if (span.TotalDays > 30) return dateTime.ToString("MMM dd, yyyy");
        if (span.TotalDays > 1) return $"{(int)span.TotalDays} days ago";
        if (span.TotalHours > 1) return $"{(int)span.TotalHours} hours ago";
        return "recently";
    }
}
