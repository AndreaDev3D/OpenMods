@page "/explore"
@using OpenMods.Server.Models
@using OpenMods.Server.Data
@using OpenMods.Server.Components.Shared
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<AppDbContext> DbFactory

<PageTitle>OpenMods | Explore Open-Source Mods</PageTitle>

<div class="max-w-[1440px] mx-auto flex flex-col xl:flex-row gap-8 px-6 py-8">
    <aside class="w-full xl:w-64 shrink-0 flex flex-col gap-8">
        <section>
            <h3 class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-4 font-display">Categories</h3>
            <nav class="flex flex-col gap-1 font-display">
                <button
                    class="flex items-center gap-3 px-3 py-2 rounded-lg @(SelectedCategoryId == null ? "bg-primary/10 text-primary font-bold" : "text-slate-500 hover:bg-slate-100 dark:hover:bg-card-dark transition-colors")"
                    @onclick="() => SelectCategory(null)">
                    <span class="material-symbols-outlined text-[20px]">grid_view</span>
                    <span class="text-sm">All Mods</span>
                </button>
                @foreach (var cat in _categories)
                {
                    <button
                        class="flex items-center gap-3 px-3 py-2 rounded-lg @(SelectedCategoryId == cat.Id ? "bg-primary/10 text-primary font-bold" : "text-slate-500 hover:bg-slate-100 dark:hover:bg-card-dark transition-colors")"
                        @onclick="() => SelectCategory(cat.Id)">
                        <span class="material-symbols-outlined text-[20px]">@cat.Icon</span>
                        <span class="text-sm">@cat.Name</span>
                    </button>
                }
            </nav>
        </section>

        <section>
            <h3 class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-4 font-display">Filters</h3>
            <div class="space-y-3 px-1">
                <div class="relative">
                    <span
                    class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-lg">search</span>
                    <input
                    class="w-full pl-10 pr-4 py-2 bg-slate-100 dark:bg-card-dark border-none rounded-lg text-sm focus:ring-2 focus:ring-primary font-display"
                    placeholder="Search mods..." type="text" @bind="_searchQuery" @bind:event="oninput"
                    @onkeyup="FilterMods" />
                </div>
            </div>
        </section>

        <div class="mt-auto pt-8 border-t border-slate-200 dark:border-border-dark hidden xl:block font-display">
            <a href="/dashboard"
                   class="w-full flex items-center justify-center gap-2 py-3 rounded-lg border-2 border-dashed border-slate-300 dark:border-slate-700 text-slate-500 hover:border-primary hover:text-primary transition-all group">
                <span
                class="material-symbols-outlined text-[20px] group-hover:rotate-180 transition-transform duration-500">add_circle</span>
                <span class="text-sm font-bold">Submit a Mod</span>
            </a>
        </div>
    </aside>

    <section class="flex-1 flex flex-col gap-6">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
            <div class="font-display">
                <h1 class="text-3xl font-bold tracking-tight">Explore OpenMods</h1>
                <p class="text-slate-500 dark:text-slate-400 mt-1">Discover, download, and contribute to
                    community-driven projects.</p>
                </div>
                <div class="flex items-center gap-3 font-display">
                    <div class="flex rounded-lg bg-slate-200 dark:bg-card-dark p-1">
                        <button @onclick='() => _viewMode = "grid"'
                                class="p-1.5 rounded @(_viewMode == "grid" ? "bg-white dark:bg-slate-700 shadow-sm text-primary" : "text-slate-500 hover:text-primary")">
                            <span class="material-symbols-outlined block">grid_view</span>
                        </button>
                        <button @onclick='() => _viewMode = "list"'
                                class="p-1.5 rounded @(_viewMode == "list" ? "bg-white dark:bg-slate-700 shadow-sm text-primary" : "text-slate-500 hover:text-primary")">
                            <span class="material-symbols-outlined block">list</span>
                        </button>
                    </div>
                    <div class="h-8 w-px bg-slate-200 dark:bg-border-dark mx-1 hidden md:block"></div>
                    <div class="relative group">
                        <button
                            class="flex items-center gap-2 px-3 h-10 rounded-lg bg-slate-200 dark:bg-card-dark text-sm font-bold whitespace-nowrap">
                            <span class="material-symbols-outlined text-[20px]">sort</span>
                            @(_sortOption)
                            <span class="material-symbols-outlined text-[18px]">expand_more</span>
                        </button>
                        <div
                            class="absolute right-0 top-full mt-2 w-48 bg-white dark:bg-card-dark border border-slate-200 dark:border-border-dark rounded-xl shadow-xl z-50 py-2 hidden group-hover:block">
                            <button class="w-full text-left px-4 py-2 text-sm hover:bg-slate-100 dark:hover:bg-slate-800"
                                    @onclick='() => SetSort("Newest")'>Newest First</button>
                            <button class="w-full text-left px-4 py-2 text-sm hover:bg-slate-100 dark:hover:bg-slate-800"
                                    @onclick='() => SetSort("Stars")'>Most Starred</button>
                            <button class="w-full text-left px-4 py-2 text-sm hover:bg-slate-100 dark:hover:bg-slate-800"
                                    @onclick='() => SetSort("Forks")'>Most Forked</button>
                        </div>
                    </div>
                </div>
            </div>

            @if (_isLoading)
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 2xl:grid-cols-3 gap-6">
                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="bg-card-dark h-80 rounded-xl animate-pulse"></div>
                    }
                </div>
            }
            else if (!_filteredMods.Any())
            {
                <div class="flex flex-col items-center justify-center py-24 text-center">
                    <span class="material-symbols-outlined text-6xl text-slate-700 mb-4">search_off</span>
                    <h3 class="text-xl font-bold font-display">No mods found</h3>
                    <p class="text-slate-500 max-w-xs mt-2 font-display">Try adjusting your search or category filters to find
                        what you're looking for.</p>
                        <button class="mt-6 text-primary font-bold hover:underline" @onclick="ResetFilters">Clear all
                            filters</button>
                        </div>
                    }
        else
                    {
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 2xl:grid-cols-3 gap-6">
                            @foreach (var mod in _filteredMods)
                            {
                                <ModCard Mod="mod" />
                            }
                        </div>
                    }
                </section>
            </div>

@code {
    private int? SelectedCategoryId { get; set; }
    private string _searchQuery = "";
    private string _sortOption = "Newest";
    private string _viewMode = "grid";
    private bool _isLoading = true;

    private List<Category> _categories = new();
    private List<Mod> _allMods = new();
    private List<Mod> _filteredMods = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        
        _categories = await context.Categories.OrderBy(c => c.Name).ToListAsync();
        
        _allMods = await context.Mods
            .Include(m => m.Developer)
            .Include(m => m.Releases)
            .Include(m => m.Categories)
            .OrderByDescending(m => m.CreatedAt)
            .ToListAsync();

        _isLoading = false;
        FilterMods();
    }

    private void SelectCategory(int? categoryId)
    {
        SelectedCategoryId = categoryId;
        FilterMods();
    }

    private void SetSort(string sort)
    {
        _sortOption = sort;
        FilterMods();
    }

    private void ResetFilters()
    {
        _searchQuery = "";
        SelectedCategoryId = null;
        FilterMods();
    }

    private void FilterMods()
    {
        var query = _allMods.AsEnumerable();

        // 1. Category Filter
        if (SelectedCategoryId != null)
        {
            query = query.Where(m => m.Categories.Any(c => c.Id == SelectedCategoryId));
        }

        // 2. Search Filter
        if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            var search = _searchQuery.ToLower();
            query = query.Where(m =>
                m.Name.ToLower().Contains(search) ||
                (m.Description != null && m.Description.ToLower().Contains(search)));
        }

        // 3. Sorting
        query = _sortOption switch
        {
            "Stars" => query.OrderByDescending(m => m.Stars),
            "Forks" => query.OrderByDescending(m => m.Forks),
            _ => query.OrderByDescending(m => m.CreatedAt)
        };

        _filteredMods = query.ToList();
    }
}
