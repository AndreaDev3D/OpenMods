@page "/explore"
@using OpenMods.Shared.Models
@using OpenMods.Shared.Data
@using OpenMods.Server.Components.Shared
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<AppDbContext> DbFactory
@inject NavigationManager Nav

<PageTitle>OpenMods | Explore Open-Source Mods</PageTitle>

<div class="max-w-[1440px] mx-auto flex flex-col xl:flex-row gap-8 px-6 lg:px-10 py-8">
    <aside class="w-full xl:w-64 shrink-0 flex flex-col gap-8">
        <section>
            <h3 class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-4 font-display">Categories</h3>
            <nav class="flex flex-col gap-1 font-display">
                <button
                    class="flex items-center gap-3 px-3 py-2 rounded-lg @(SelectedCategoryId == null ? "bg-primary/10 text-primary font-bold" : "text-slate-500 hover:bg-slate-100 dark:hover:bg-card-dark transition-colors")"
                    @onclick="() => SelectCategory(null)">
                    <span class="material-symbols-outlined text-[20px]">grid_view</span>
                    <span class="text-sm">All Mods</span>
                </button>
                @foreach (var cat in _categories)
                {
                    <button
                        class="flex items-center gap-3 px-3 py-2 rounded-lg @(SelectedCategoryId == cat.Id ? "bg-primary/10 text-primary font-bold" : "text-slate-500 hover:bg-slate-100 dark:hover:bg-card-dark transition-colors")"
                        @onclick="() => SelectCategory(cat.Id)">
                        <span class="material-symbols-outlined text-[20px]">@cat.Icon</span>
                        <span class="text-sm">@cat.Name</span>
                    </button>
                }
            </nav>
        </section>

        <section>
            <h3 class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-4 font-display">Filters</h3>
            <div class="space-y-3 px-1">
                <div class="relative">
                    <span
                    class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-lg">search</span>
                    <input
                    class="w-full pl-10 pr-4 py-2 bg-slate-100 dark:bg-card-dark border-none rounded-lg text-sm focus:ring-2 focus:ring-primary font-display"
                    placeholder="Search mods..." type="text" @bind="_searchQuery" @bind:event="oninput"
                    @onkeyup="FilterMods" />
                </div>
            </div>
        </section>

        <section>
            <h3 class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-4 font-display">License Type</h3>
            <div class="space-y-3 px-1">
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input
                    class="rounded border-slate-300 dark:border-slate-700 bg-transparent text-primary focus:ring-primary h-4 w-4"
                    type="checkbox" />
                    <span class="text-sm text-slate-400 group-hover:text-primary transition-colors">MIT License</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input
                    class="rounded border-slate-300 dark:border-slate-700 bg-transparent text-primary focus:ring-primary h-4 w-4"
                    type="checkbox" />
                    <span class="text-sm text-slate-400 group-hover:text-primary transition-colors">GPL-3.0</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input
                    class="rounded border-slate-300 dark:border-slate-700 bg-transparent text-primary focus:ring-primary h-4 w-4"
                    type="checkbox" />
                    <span class="text-sm text-slate-400 group-hover:text-primary transition-colors">Apache-2.0</span>
                </label>
            </div>
        </section>

        <section>
            <h3 class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-4 font-display">Verification</h3>
            <div class="space-y-3 px-1">
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input
                    class="rounded border-slate-300 dark:border-slate-700 bg-transparent text-primary focus:ring-primary h-4 w-4"
                    type="checkbox" @bind="_verifiedOnly" @bind:after="FilterMods" />
                    <span class="text-sm text-slate-400 group-hover:text-primary transition-colors">Verified Only</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input
                    class="rounded border-slate-300 dark:border-slate-700 bg-transparent text-primary focus:ring-primary h-4 w-4"
                    type="checkbox" />
                    <span class="text-sm text-slate-400 group-hover:text-primary transition-colors">Beta Releases</span>
                </label>
            </div>
        </section>

        <div class="mt-auto pt-8 border-t border-slate-200 dark:border-border-dark hidden xl:block font-display">
            <a href="/dashboard"
                   class="w-full flex items-center justify-center gap-2 py-3 rounded-lg border-2 border-dashed border-slate-300 dark:border-slate-700 text-slate-500 hover:border-primary hover:text-primary transition-all group">
                <span
                class="material-symbols-outlined text-[20px] group-hover:rotate-180 transition-transform duration-500">add_circle</span>
                <span class="text-sm font-bold">Submit a Mod</span>
            </a>
        </div>
    </aside>

    <section class="flex-1 flex flex-col gap-6">
        @if (_selectedGame != null)
        {
            <div class="relative w-full h-48 rounded-2xl overflow-hidden border border-border-dark mb-4 flex items-end">
                <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('@_selectedGame.ImageUrl')"></div>
                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>
                <div class="relative p-8 flex items-end justify-between w-full">
                    <div>
                        <div class="flex items-center gap-2 text-primary mb-2">
                             <span class="material-symbols-outlined text-sm">sports_esports</span>
                             <span class="text-xs font-bold uppercase tracking-widest">Selected Game</span>
                        </div>
                        <h2 class="text-4xl font-black text-white tracking-tight">@_selectedGame.Name</h2>
                    </div>
                    <button @onclick="() => SelectGame(null)" class="bg-white/10 hover:bg-white/20 backdrop-blur-md text-white size-10 rounded-full flex items-center justify-center transition-all group">
                         <span class="material-symbols-outlined transition-transform group-hover:rotate-90">close</span>
                    </button>
                </div>
            </div>
        }

        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
            <div class="font-display">
                <h1 class="text-3xl font-bold tracking-tight">@(_selectedGame == null ? "Explore OpenMods" : $"{_selectedGame.Name} Mods")</h1>
                <p class="text-slate-500 dark:text-slate-400 mt-1">Discover, download, and contribute to
                    community-driven projects.</p>
                </div>
                <div class="flex items-center gap-3 font-display">
                    <div class="flex rounded-lg bg-slate-200 dark:bg-card-dark p-1">
                        <button @onclick='() => _viewMode = "grid"'
                                class="p-1.5 rounded @(_viewMode == "grid" ? "bg-white dark:bg-slate-700 shadow-sm text-primary" : "text-slate-500 hover:text-primary")">
                            <span class="material-symbols-outlined block">grid_view</span>
                        </button>
                        <button @onclick='() => _viewMode = "list"'
                                class="p-1.5 rounded @(_viewMode == "list" ? "bg-white dark:bg-slate-700 shadow-sm text-primary" : "text-slate-500 hover:text-primary")">
                            <span class="material-symbols-outlined block text-[20px]">view_list</span>
                        </button>
                    </div>
                    <div class="h-8 w-px bg-slate-200 dark:border-border-dark mx-1 hidden md:block"></div>
                    <div class="relative group">
                        <button
                            class="flex items-center gap-2 px-3 h-10 rounded-lg bg-slate-200 dark:bg-card-dark text-sm font-bold whitespace-nowrap">
                            <span class="material-symbols-outlined text-[20px]">sort</span>
                            @(_sortOption) First
                            <span class="material-symbols-outlined text-[18px]">expand_more</span>
                        </button>
                        <div
                            class="absolute right-0 top-full mt-2 w-48 bg-white dark:bg-card-dark border border-slate-200 dark:border-border-dark rounded-xl shadow-xl z-50 py-2 hidden group-hover:block">
                            <button class="w-full text-left px-4 py-2 text-sm hover:bg-slate-100 dark:hover:bg-slate-800"
                                    @onclick='() => SetSort("Newest")'>Newest First</button>
                            <button class="w-full text-left px-4 py-2 text-sm hover:bg-slate-100 dark:hover:bg-slate-800"
                                    @onclick='() => SetSort("Stars")'>Most Starred</button>
                            <button class="w-full text-left px-4 py-2 text-sm hover:bg-slate-100 dark:hover:bg-slate-800"
                                    @onclick='() => SetSort("Views")'>Most Viewed</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-2">
                @if (_verifiedOnly)
                {
                    <button
                        class="flex items-center gap-2 px-3 py-1.5 bg-slate-800 border border-border-dark rounded-lg text-xs font-bold text-white group"
                        @onclick="() => { _verifiedOnly = false; FilterMods(); }">
                        Verified <span
                        class="material-symbols-outlined text-sm text-slate-500 group-hover:text-white">close</span>
                    </button>
                }
                <button class="text-xs font-bold text-slate-500 hover:text-white transition-colors"
                        @onclick="ResetFilters">Clear all</button>
            </div>

            @if (_isLoading)
            {
                <div
                    class="@(_viewMode == "grid" ? "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 2xl:grid-cols-3 gap-6" : "flex flex-col gap-4")">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="bg-card-dark @(_viewMode == "grid" ? "h-80" : "h-44") rounded-2xl animate-pulse"></div>
                    }
                </div>
            }
            else if (!_filteredMods.Any())
            {
                <div class="flex flex-col items-center justify-center py-24 text-center">
                    <span class="material-symbols-outlined text-6xl text-slate-700 mb-4">search_off</span>
                    <h3 class="text-xl font-bold font-display">No mods found</h3>
                    <p class="text-slate-500 max-w-xs mt-2 font-display">Try adjusting your search or category filters to find
                        what you're looking for.</p>
                        <button class="mt-6 text-primary font-bold hover:underline" @onclick="ResetFilters">Clear all
                            filters</button>
                        </div>
                    }
        else
                    {
                        <div
                            class="@(_viewMode == "grid" ? "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 2xl:grid-cols-3 gap-6" : "flex flex-col gap-4")">
                            @foreach (var mod in _filteredMods)
                            {
                                if (_viewMode == "grid")
                                {
                                    <ModCard Mod="mod" />
                                }
                                else
                                {
                                    <ModListItem Mod="mod" />
                                }
                            }
                        </div>

                        <!-- Design elements from screenshot -->
                        <div
                            class="mt-12 p-12 border-2 border-dashed border-border-dark rounded-[2rem] flex flex-col items-center justify-center text-center gap-4 bg-black/10">
                            <div class="size-10 rounded-full bg-slate-800 flex items-center justify-center">
                                <span class="material-symbols-outlined text-slate-400 text-lg">explore_off</span>
                            </div>
                            <div>
                                <h3 class="font-bold text-white">End of the line</h3>
                                <p class="text-sm text-slate-500 max-w-xs mx-auto">Check back later for new decentralized releases.</p>
                            </div>
                            <button class="text-primary text-sm font-bold hover:underline">Load More</button>
                        </div>

                        <div class="mt-12 flex items-center justify-center gap-2">
                            <button
                                class="size-10 rounded-xl border border-border-dark flex items-center justify-center text-slate-500 hover:text-white hover:border-slate-600 transition-all">
                                <span class="material-symbols-outlined text-[20px]">chevron_left</span>
                            </button>
                            <button class="size-10 rounded-xl bg-primary text-white font-bold">1</button>
                            <button
                            class="size-10 rounded-xl border border-border-dark flex items-center justify-center text-slate-500 hover:text-white hover:border-slate-600 transition-all">2</button>
                            <button
                            class="size-10 rounded-xl border border-border-dark flex items-center justify-center text-slate-500 hover:text-white hover:border-slate-600 transition-all">3</button>
                            <span class="text-slate-600 px-2">...</span>
                            <button
                            class="size-10 rounded-xl border border-border-dark flex items-center justify-center text-slate-500 hover:text-white hover:border-slate-600 transition-all">24</button>
                            <button
                                class="size-10 rounded-xl border border-border-dark flex items-center justify-center text-slate-500 hover:text-white hover:border-slate-600 transition-all">
                                <span class="material-symbols-outlined text-[20px]">chevron_right</span>
                            </button>
                        </div>
                    }
                </section>
            </div>

@code {
    [SupplyParameterFromQuery] public int? GameId { get; set; }
    
    private int? SelectedCategoryId { get; set; }
    private string _searchQuery = "";
    private string _sortOption = "Newest";
    private string _viewMode = "grid";
    private bool _verifiedOnly = false;
    private bool _isLoading = true;

    private List<Category> _categories = new();
    private List<Mod> _allMods = new();
    private List<Mod> _filteredMods = new();
    private Game? _selectedGame;

    protected override async Task OnInitializedAsync()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        
        _categories = await context.Categories.OrderBy(c => c.Name).ToListAsync();
        
        _allMods = await context.Mods
            .Include(m => m.Developer)
            .Include(m => m.Releases)
            .Include(m => m.SupportedGames)
            .Include(m => m.Categories)
            .OrderByDescending(m => m.CreatedAt)
            .ToListAsync();

        if (GameId.HasValue)
        {
            _selectedGame = await context.Games.FindAsync(GameId.Value);
        }

        _isLoading = false;
        FilterMods();
    }

    protected override void OnParametersSet()
    {
        // Handle query parameter changes if already on page
        if (GameId.HasValue && (_selectedGame == null || _selectedGame.Id != GameId.Value))
        {
            using var context = DbFactory.CreateDbContext();
            _selectedGame = context.Games.Find(GameId.Value);
            FilterMods();
        }
    }

    private void SelectCategory(int? categoryId)
    {
        SelectedCategoryId = categoryId;
        FilterMods();
    }

    private void SelectGame(int? gameId)
    {
        if (gameId == null)
        {
            _selectedGame = null;
            // Clear query param
            Nav.NavigateTo("/explore");
        }
        else
        {
            Nav.NavigateTo($"/explore?gameId={gameId}");
        }
        FilterMods();
    }

    private void SetSort(string sort)
    {
        _sortOption = sort;
        FilterMods();
    }

    private void ResetFilters()
    {
        _searchQuery = "";
        SelectedCategoryId = null;
        _verifiedOnly = false;
        _selectedGame = null;
        Nav.NavigateTo("/explore");
        FilterMods();
    }

    private void FilterMods()
    {
        var query = _allMods.AsEnumerable();

        // Security: Never show archived mods in explorer
        query = query.Where(m => !m.IsArchived);

        // 1. Game Filter
        if (_selectedGame != null)
        {
            query = query.Where(m => m.SupportedGames.Any(g => g.Id == _selectedGame.Id));
        }

        // 2. Category Filter
        if (SelectedCategoryId != null)
        {
            query = query.Where(m => m.Categories.Any(c => c.Id == SelectedCategoryId));
        }

        // 3. Search Filter
        if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            var search = _searchQuery.ToLower();
            query = query.Where(m =>
                m.Name.ToLower().Contains(search) ||
                (m.Description != null && m.Description.ToLower().Contains(search)));
        }

        // 4. Verification Filter
        if (_verifiedOnly)
        {
            query = query.Where(m => m.Stars >= 1000);
        }

        // 5. Sorting
        query = _sortOption switch
        {
            "Stars" => query.OrderByDescending(m => m.Stars),
            "Views" => query.OrderByDescending(m => m.Views),
            _ => query.OrderByDescending(m => m.CreatedAt)
        };

        _filteredMods = query.ToList();
    }
}
