@using Microsoft.JSInterop
@inject Client SupabaseClient
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ILogger<Navbar> Logger

@code {
    private async Task HandleLogin()
    {
        try
        {
            var appUrl = Environment.GetEnvironmentVariable("APP_URL") ?? Nav.BaseUri;
            Logger.LogInformation("Login started. APP_URL from env: {AppUrl}, Nav.BaseUri: {BaseUri}",
                Environment.GetEnvironmentVariable("APP_URL"), Nav.BaseUri);

            var callbackUrl = appUrl.TrimEnd('/') + "/auth/callback";
            
            // Ensure callbackUrl has a scheme (preferring https)
            if (!callbackUrl.StartsWith("http://") && !callbackUrl.StartsWith("https://"))
            {
                callbackUrl = "https://" + callbackUrl;
                Logger.LogWarning("callbackUrl missing scheme, prepended https://. New callbackUrl: {CallbackUrl}", callbackUrl);
            }

            Logger.LogInformation("Requesting auth with RedirectTo: {CallbackUrl}", callbackUrl);
            var result = await SupabaseClient.Auth.SignIn(Supabase.Gotrue.Constants.Provider.Github, new
Supabase.Gotrue.SignInOptions
            {
                RedirectTo = callbackUrl,
                FlowType = Supabase.Gotrue.Constants.OAuthFlowType.PKCE
            });
            
            if (result.Uri != null)
            {
                Logger.LogInformation("Login URI generated: {Uri}", result.Uri);
                // Store PKCE verifier for the callback
                await JS.InvokeVoidAsync("sessionStorage.setItem", "supabase_pkce_verifier", result.PKCEVerifier);
                Logger.LogInformation("Redirecting to Supabase...");
                Nav.NavigateTo(result.Uri.ToString(), true);
            }
            else
            {
                Logger.LogWarning("Login result URI is null");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Crash during HandleLogin");
            throw; // Rethrow to see in UI if DetailedErrors is on
        }
    }

    private async Task HandleLogout()
    {
        await SupabaseClient.Auth.SignOut();
        Nav.NavigateTo("/", true);
    }
}
